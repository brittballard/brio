<h1>you are now registering</h1>
your signup id is... <%= @signup.id %>
<br /><br />
<% form_for(@user, :url => go_pay_signup_path(@signup)) do |f| %>
  <%= f.error_messages %>
  <%= render(:partial => "users/form", :locals => { :form => f, :show_password_toggle => true } )%>
  <%= f.submit("Go pay", :action => "go_pay") %>
<% end %>
