<h1>You are registering for this event, wanker</h1>
<!-- Make a partial out of the event view for information about the event and the disclaimer  -->
<% form_for :signup, @signup, :url => { :action => "go_register" } do |f| %>
<ul>
    <li>
        Event name: <%= @event.title %>
    </li>
    <li>
        Disclaimer: 
        <div style="height: 300px; width: 200px; overflow: auto; overflow-y: hidden; border-style: solid; border-width: 1px; border-color: black;">
            <%= @event.disclaimer %>
        </div>
    </li>
    <li>
        <%= label_tag "How old are you?" %>
        <%= text_field_tag "age" %>
    </li>
    <li>
        <%= f.label :accepted_terms, "Do you agree to these terms?" %>
        <%= f.check_box :accepted_terms %>
    </li>
    <li>
        <%= submit_tag 'Register' %>
    </li>
</ul>
<% end %>
