<% form_for(@event) do |f| %>
  <ul>
    <li>
      <%= f.label(:title) %>
    </li>
    <li>
      <%= f.text_field(:title) %>
    </li>
    <li>
      <%= f.label(:start_date_time) %>
    </li>
    <li>
      <%= text_field_tag('event[start_date]', nil, :id => 'start_date_picker') %><%= select_tag('event[start_hour]', options_for_select((0..24).to_a)) %><%= select_tag('event[start_minute]', options_for_select((00..59).to_a)) %>
    </li>
    <li>
      <%= f.label(:end_date_time) %>
    </li>
    <li>
      <%= text_field_tag('event[end_date]', nil, :id => 'end_date_picker') %><%= select_tag('event[end_hour]', options_for_select((0..24).to_a)) %><%= select_tag('event[end_minute]', options_for_select((00..59).to_a)) %>
    </li>
    <li>
      <%= f.label(:registration_start_date_time) %>
    </li>
    <li>
      <%= text_field_tag('event[registration_start_date]', nil, :id => 'registration_start_date_picker') %><%= select_tag('event[registration_start_hour]', options_for_select((0..24).to_a)) %><%= select_tag('event[registration_start_minute]', options_for_select((00..59).to_a)) %>
    </li>
    <li>
      <%= f.label(:registration_end_date) %>
    </li>
    <li>
      <%= text_field_tag('event[registration_end_date]', nil, :id => 'registration_end_date_picker') %><%= select_tag('event[registration_end_hour]', options_for_select((0..24).to_a)) %><%= select_tag('event[registration_end_minute]', options_for_select((00..59).to_a)) %>
    </li>
    <li>
      <%= f.submit(:create) %>
    </li>
  </ul>
<% end %>
<script>
  $(document).ready(function() {
    register_date_picker(['start_date_picker', 'end_date_picker', 'registration_start_date_picker', 'registration_end_date_picker'])
  })
</script>