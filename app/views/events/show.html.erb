<div id='event'>
  <ul>
    <li>
      Title: <%= @event.title %>
    </li>
    <li>
      Start Date: <%= @event.start_date_time %>
    </li>
    <li>
      End Date: <%= @event.end_date_time %>
    </li>
    <li>
      Registration Start Date: <%= @event.registration_start_date_time %>
    </li>
    <li>
      Registration End Date: <%= @event.registration_end_date_time %>
    </li>
  </ul>
  <div id='map_canvas'></div>
  <div id='map_pano'></div>
  <ul>
      <li>
          <%= link_to "Manage registrants", event_users_path(@event) %>
      </li>
  </ul>
</div>
<script>
  $(document).ready(function() {
    var map = brio.utility.map.initialize_map(new GMap2(document.getElementById('map_canvas')), new GLatLng(32.7833333, -96.8), 15);
    brio.utility.map.add_overlays(map, [new GStreetviewOverlay()]);
    brio.utility.pano.initialize_pano(map, new GStreetviewPanorama(document.getElementById('map_pano')), GEvent);
    brio.utility.set_data('map_canvas', [['map_path', '<%= maps_path %>'], ['map_datapoints_path', '<%= map_datapoints_path %>']]);
  })
</script>