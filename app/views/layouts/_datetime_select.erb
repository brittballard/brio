<%= text_field_tag("event[#{date_type}_date]", nil, :id => "#{date_type}_date_picker", :value => (value.present? ? "#{value.day()}/#{value.month()}/#{value.year()}" : nil)) %>
<%= select_tag("event[#{date_type}_hour]", "<option></options>" + options_for_select((0..23).to_a, (value.present? ? value.hour : nil))) %> : 
<%= select_tag("event[#{date_type}_minute]", "<option></options>" + options_for_select(('00'..'59').to_a.map { |minute| minute.rjust(2, '0') }, (value.present? ? value.min.to_s.rjust(2, '0') : nil))) %>