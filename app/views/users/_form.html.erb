<% content_for :javascript_includes do %>
  <%= javascript_include_tag "brio.users.js" %>
<% end %>
<%= form.label(:email) %>
<br/>
<%= form.text_field(:email) %>
<br/>
<br/>
<%= form.label(:default_time_zone) %>
<br/>
<%= select('user', 'default_time_zone', time_zone_options_for_select()) %>
<br/>
<br/>
<% if show_password %>
    <% if show_password_toggle %>
        <%= label(:show_password, "Save this account for later user") %>
        <%= check_box(:show_password, "show_password") %>
    <% end %>
    <div id="password_container">
        <%= form.label(:password, form.object.new_record? ? nil : "Change password") %>
        <br/>
        <%= form.password_field(:password) %>
        <br/>
        <br/>
        <%= form.label(:password_confirmation) %>
        <br/>
        <%= form.password_field(:password_confirmation) %>
        <br/>
    </div>
<% end %>
<div id="jobs_container">
  <%= collection_select("Description", "job_id", @jobs, :id, :description ) %>
</div>