<h1>New job</h1>

<% form_for(@job) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :Description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :EventId %><br />
    <%= f.text_field :event_id %>
  </p>
   <p>
    <%= f.label :LocationId %><br />
    <%= f.text_field :location_id %>
  </p>
  <p>
    <%= f.label :number_of_volunteers, "Number of Volunteers" %><br />
    <%= f.text_field :number_of_volunteers %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', jobs_path %>